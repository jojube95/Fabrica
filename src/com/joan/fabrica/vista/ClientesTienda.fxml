<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="com.joan.fabrica.controlador.ClientesTiendaController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Label text="Buscar:" />
                  <TextField fx:id="tBuscar" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <bottom>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="bNuevo" mnemonicParsing="false" onAction="#abrirNuevo" text="Nuevo">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="bEditar" mnemonicParsing="false" onAction="#abirrEditar" text="Editar">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="bEliminar" mnemonicParsing="false" onAction="#abrirEliminar" text="Eliminar">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="tvClientes" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="tcNombre" prefWidth="75.0" text="Nombre" />
                <TableColumn fx:id="tcLocalidad" prefWidth="75.0" text="Localidad" />
                <TableColumn fx:id="tcFecha" prefWidth="75.0" text="FechaNac" />
                  <TableColumn fx:id="tcUsuario" prefWidth="75.0" text="Usuario" />
                  <TableColumn fx:id="tcContra" prefWidth="75.0" text="Contra" />
              </columns>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
